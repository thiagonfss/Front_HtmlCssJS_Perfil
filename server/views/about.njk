{% extends "layout.njk" %}

{% block head %}
    <link href="https://netdna.bootstrapcdn.com/font-awesome/4.0.1/css/font-awesome.css?ver=3.9.2" id='font-awesome-css' media='all' rel='stylesheet' type='text/css'/>
    <title>About</title>
{% endblock %}


{% block content %}
<div class="wrapper">
    <img src="{{about.avatar_url}}" alt="imagem de {{about.name}}">
    <h1>{{about.name}}</h1>
    <h2>{{about.role}}</h2>
    <p>{{ about.description}}</p>
</div>

<nav>
    <ul class="socialNetworks">
        
        {% for link in about.links %}
            <a href='{{link.url}}' title="{{link.name}}" target="_blank">
                <li class="icons"><i class="fa fa-{{link.name}}" style="color:#fff"></i></li>
            </a>
        {% endfor %}
    </ul>
</nav>
{% endblock %}